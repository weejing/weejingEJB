<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>OssServlet</servlet-name>
        <servlet-class>servlets.OssServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/Login.jsp</jsp-file>
    </servlet>
        
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/Register.jsp</jsp-file>
    </servlet>
    
    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>/Home.jsp</jsp-file>
    </servlet>
    
    <servlet> 
        <servlet-name>displayProduct</servlet-name>
        <jsp-file>/DisplayProduct.jsp</jsp-file>
    </servlet>
    
    <servlet>
        <servlet-name>search</servlet-name>
        <jsp-file>/Search.jsp</jsp-file>
    </servlet>  
    
    <servlet>
        <servlet-name>listProducts</servlet-name>
        <jsp-file>/ListProducts.jsp</jsp-file>
    </servlet>
    
    <servlet>
        <servlet-name>shoppingCart</servlet-name>
        <jsp-file>/ShoppingCart.jsp</jsp-file>
    </servlet>
     
    <servlet>
        <servlet-name>payment</servlet-name>
        <jsp-file>Payment.jsp</jsp-file>
    </servlet>
    
    <servlet>
        <servlet-name>listOrders</servlet-name>
        <jsp-file>ListOrders.jsp</jsp-file>
    </servlet>
    
    <servlet>
        <servlet-name>orderDetails</servlet-name>
        <jsp-file>OrderDetails.jsp</jsp-file>      
    </servlet>
    
    <servlet> 
        <servlet-name>profile</servlet-name>
        <jsp-file>/Profile.jsp</jsp-file>
    </servlet>
    
    <servlet>
        <servlet-name>editProfile</servlet-name>
        <jsp-file>/EditProfile.jsp</jsp-file>
    </servlet>                                                    
    
    <servlet-mapping>
        <servlet-name>OssServlet</servlet-name>
        <url-pattern>/ossServlet/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>displayProduct</servlet-name>
        <url-pattern>/displayProduct</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>listProducts</servlet-name>
        <url-pattern>/listProducts</url-pattern>
    </servlet-mapping>
        
    <servlet-mapping>
        <servlet-name>shoppingCart</servlet-name>
        <url-pattern>/shoppingCart</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>payment</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>listOrders</servlet-name>
        <url-pattern>/listOrders</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>orderDetails</servlet-name>
        <url-pattern>/orderDetails</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>editProfile</servlet-name>
        <url-pattern>/editProfile</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
</web-app>
